// determine a number is positive , negative or zero

#include <iostream>
using namespace std;

int main()
{

	int a;
	
	cout<<"Enter value of A :"<<endl;
	cin>>a;
	
	if (a>0){
		cout<<"A is positive ";
	}
	
	else if (a<0){
		cout<<"A is negative";
	}
	
	else {
		cout<<"A is 0";
	}

}
